<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zhcet">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zhcet" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:src="@drawable/p222"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#ebfff7"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <!--<ImageView
                android:id="@+id/add_friend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu"
                android:src="@drawable/ic_place_black_24dp" />

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_place_black_24dp" />-->

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Prashant Kumar Singh"
                android:textColor="#444"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Computers (III Year)"
                android:textColor="#555"
                android:textSize="14sp" />
        </RelativeLayout>


        <ImageButton
            android:id="@+id/user_profile_photo2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:src="@drawable/s111"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/user_profile_photo"
            android:layout_alignStart="@+id/user_profile_photo" />


        <RelativeLayout
            android:id="@+id/profile_layout2"
            android:layout_toEndOf="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebc707"
            android:layout_marginTop="70dp"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_below="@+id/profile_layout"
            android:layout_alignParentStart="true">


            <!--<ImageView
                android:id="@+id/add_friend2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu2"
                android:src="@drawable/ic_place_black_24dp" />

            <ImageView
                android:id="@+id/drop_down_option_menu2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_place_black_24dp" />-->

            <TextView
                android:id="@+id/user_profile_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Shantanu Sharma"
                android:textColor="#444"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Computers (III Year)"
                android:textColor="#555"
                android:textSize="14sp" />
        </RelativeLayout>



    </RelativeLayout>
</ScrollView>